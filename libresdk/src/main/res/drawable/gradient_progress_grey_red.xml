<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="180"
                android:centerColor="@color/grey_300"
                android:endColor="@color/grey_300"
                android:startColor="@color/grey_300" />
            <size
                android:width="5dp"
                android:height="1dp" />
            <!--<corners android:radius="5dp" />-->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="180"
                    android:centerColor="@color/brand_red"
                    android:endColor="@color/brand_red"
                    android:startColor="@color/brand_red" />
                <size
                    android:width="5dp"
                    android:height="1dp" />
                <!--<corners android:radius="5dp" />-->
            </shape>
        </clip>
    </item>
</layer-list>