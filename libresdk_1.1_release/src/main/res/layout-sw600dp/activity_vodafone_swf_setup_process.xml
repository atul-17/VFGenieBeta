<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/placeholder_image"
        android:id="@+id/tvSuperWifiPic"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_below="@+id/tvSuperWifiPic"
        android:layout_marginRight="15dp"
        android:id="@+id/rlSuperWifi"
        android:gravity="center">


        <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSuperWifiHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/vodafone_light"
        android:gravity="center"
        android:text="@string/setup_super_wifi"
        android:textSize="40sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/tvSuperWifiHeading"
            android:src="@drawable/ic_black_plus" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vodafone_light"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rlSuperWifi"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="28sp"
        android:text="@string/setup_super_wifi_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"

        >


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Start"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/vodafone_light"
        android:textSize="32sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/red_bg_rounded_corner_button"
        />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32sp"
            android:layout_marginBottom="45dp"
            android:text="Not now"
            android:textAllCaps="false"
            android:fontFamily="@font/vodafone_light"
            android:textColor="@color/black"
            android:background="@drawable/white_bg_rounded_corner_button"
            />
    </LinearLayout>
</RelativeLayout>