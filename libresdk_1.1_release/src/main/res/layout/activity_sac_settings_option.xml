<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/black"
    tools:context=".SacSettingsOption">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:titleTextColor="@color/dark_grey"

        android:layout_height="wrap_content">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:padding="20dp"
            android:textSize="20dp"
            android:text="@string/sacInstruction"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="configure using Pair/Share"
            android:visibility="visible"
            android:id="@+id/pairShareConfigure"

            android:textColor="@color/white"
            style="?android:attr/buttonStyleSmall"
            android:layout_margin="20dp"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="configure using SAC"
            android:id="@+id/sacConfigure"
            style="?android:attr/buttonStyleSmall"

            android:textColor="@color/white"
            android:layout_margin="20dp"/>
    </LinearLayout>

</RelativeLayout>
