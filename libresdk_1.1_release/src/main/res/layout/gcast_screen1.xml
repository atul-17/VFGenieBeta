<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbar"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/white">
       <TextView
           android:id="@+id/scene_title"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="Google Cast"
           android:gravity="center"
           android:textSize="22sp"
           android:textColor="@android:color/black"
           />
</androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/versionDetails">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version Number : "
            android:textColor="@color/black"
            android:padding="@dimen/abc_action_bar_content_inset_material"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/version_number"
            android:textColor="@color/black"
            android:text="1.2.3"
            android:padding="@dimen/abc_action_bar_content_inset_material"/>
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share usage data "
            android:textColor="@color/black"
            android:padding="@dimen/abc_action_bar_content_inset_material"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usage"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn about Cast Privacy"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:padding="@dimen/abc_action_bar_content_inset_material"/>

    <Button
        android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn how to cast"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:padding="@dimen/abc_action_bar_content_inset_material"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/license"
    android:autoLink="web"
    android:layout_gravity="center"
    android:textStyle="italic"
   />
</LinearLayout>