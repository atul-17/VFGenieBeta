<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/deep_grey"
    android:orientation="vertical">


    <TextView
        android:id="@+id/config_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Configure"
        android:textStyle="bold"
        android:padding="15dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:background="@drawable/white_rounded_corner_background"
        android:drawableLeft="@mipmap/ic_config"
        android:drawablePadding="10dp"
        />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/configuration_text"
        android:textStyle="normal"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/config_button"
        android:layout_marginBottom="20dp"
        />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/configuration_subtext"
        android:textStyle="normal"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/brand_orange"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/config_button"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_weight="1"
        >

    </LinearLayout>

   <!-- <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/android_footer_layout_active_scenes"
        android:layout_alignParentBottom="true"
        />-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/scene_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/title_activity_active_scenes_list"
                android:textSize="22sp"
                android:textColor="@color/dark_grey"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:visibility="visible"
                android:src="@drawable/ic_activescenes_toolbar_icon"

                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


</RelativeLayout>

